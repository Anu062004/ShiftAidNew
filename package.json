{
  "name": "shiftaid",
  "version": "1.0.0",
  "description": "Cross-Chain Humanitarian Donation Router using SideShift API",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "start": "concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev": "npm run start",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "compile": "cd contracts && npm run compile",
    "deploy:amoy": "cd contracts && npm run deploy:amoy",
    "deploy:mainnet": "cd contracts && npm run deploy:mainnet",
    "contracts:test": "cd contracts && npm test",
    "seed": "cd backend && npm run seed",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../contracts && npm install",
    "setup": "npm run install:all && npm run seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

